  },
  "icons": {
    "16": "images/mcgillicon_16.png",
    "32": "images/mcgillicon_32.png",
    "48": "images/mcgillicon_48.png",
    "128": "images/mcgillicon_128.png"
  },
  "manifest_version": 2
}